<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/styles.css" />
    <title>Bootstrap</title>
    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <!-- NAVBAR -->
    <nav
      class="navbar navbar-expand-lg navbar-dark"
      style="background-color: black"
    >
      <div class="container d-flex align-items-center">
        <!-- Brand -->
        <a class="navbar-brand" href="#">Test Navbar</a>

        <!-- Menu items beside the brand -->
        <div class="navbar-nav d-flex ms-3">
          <a class="nav-link me-3" href="home">Home</a>
          <a class="nav-link active me-3" href="my-projects">My Project</a>
          <a class="nav-link" href="contact">Contact me</a>
        </div>

        <!-- Push logout button to the right -->
        <div class="ms-auto text-white">
          <a href="/logout" class="btn btn-light">Log Out</a>
        </div>
      </div>
    </nav>
    <!-- NAVBAR -->

    <!-- CARD FORM -->
    <section
      class="card p-md-5 my-5 mx-auto bg-black text-white"
      style="max-width: 700px"
    >
      <div class="mb-4">
        <h5 class="card-title">Add My Projects</h5>
        <p>Isi form dibawah untuk menambahkan project</p>
      </div>

      <!-- FORM -->
      <form id="addMyProject" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="formSubject" class="form-label">Judul Project</label>
          <input
            type="text"
            class="form-control"
            id="formSubject"
            placeholder="Masukan nama project"
            required
          />
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="formStartDate" class="form-label">Tanggal Mulai</label>
            <input
              type="date"
              class="form-control"
              id="formStartDate"
              placeholder="Pilih tanggal mulai"
              required
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="formEndDate" class="form-label">Tanggal Selesai</label>
            <input
              type="date"
              class="form-control"
              id="formEndDate"
              placeholder="Pilih tanggal Selesai"
              required
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="formLanguage" class="form-label">Bahasa Pemrograman</label>
          <select id="formLanguage" class="form-select" required>
            <option disabled selected>
              Pilih Bahasa Pemrograman yang dipakai
            </option>
            <option value="C++">C++</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
            <option value="JavaScript">JavaScript</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="formDescription" class="form-label">Deskripsi Project</label>
          <textarea
            type="text"
            id="formDescription"
            class="form-control"
            placeholder="Tuliskan deskripsi project"
            rows="5"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Gambar</label>
          <input
            class="form-control"
            type="file"
            id="formFile"
            accept="image/*"
          />
        </div>
        <button type="submit" class="btn btn-light">Submit</button>
      </form>
      <!-- FORM -->
    </section>
    <!-- CARD FORM -->

    <!-- CARD ISI LIST FORM -->
    <section
      class="card p-md-5 my-5 mx-auto bg-black text-white"
      style="max-width: 1250px"
    >
      <div class="mb-5">
        <h5 class="card-title text-center">My Projects</h5>
        <p class="card-body text-center">
          Berikut adalah daftar project yang telah ditambahkan
        </p>
      </div>
      <div>
        <div
          id="contents"
          class="d-flex flex-wrap justify-content-center gap-4"
        >
          <!-- ISI LIST FORM DARI JAVASCRIPT -->
        </div>
      </div>
    </section>
    <!-- CARD ISI LIST FORM< -->

    <!-- Javascript -->
    <script src="../assets/js/index.js"></script>
    <!-- Javascript -->
  </body>
</html>