    <!-- CARD / FORM -->
    <form
      class="card p-md-5 my-5 mx-auto bg-black text-white"
      id="editForm"
      style="max-width: 700px"
    >
      <div class="mb-3">
        <label class="form-label">Judul Projek</label>
        <input type="text" class="form-control" id="formSubject" />
      </div>
      <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" id="formStartDate" />
      </div>
      <div class="mb-3">
        <label class="form-label">End Date</label>
        <input type="date" class="form-control" id="formEndDate" />
      </div>
      <div class="mb-3">
        <label for="formLanguage" class="form-label">Bahasa Pemrograman</label>
        <select id="formLanguage" class="form-select" required>
          <option value="C++">C++</option>
          <option value="Java">Java</option>
          <option value="Python">Python</option>
          <option value="JavaScript">JavaScript</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Deskripsi Projek</label>
        <textarea class="form-control" id="formDescription" rows="5"></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Upload Image</label>
        <input type="file" class="form-control" id="formFile" />
      </div>
      <img id="previewImage" class="img-fluid mt-3" />

      <button type="submit" class="btn btn-light">Save Changes</button>
    </form>

    <script>
document.addEventListener("DOMContentLoaded", async () => {
  // Get ID from URL or localStorage
  const params = new URLSearchParams(window.location.search);
  const editingId = params.get("id") || localStorage.getItem("editingProjectId");

  let project = null;

  // 1. Try localStorage
  const projects = JSON.parse(localStorage.getItem("project")) || [];
  project = projects.find(p => p.id == editingId);

  // 2. If not found, fetch from dummy API
  if (!project) {
    try {
      const res = await fetch(`/api/projects/${editingId}`);
      if (res.ok) {
        project = await res.json();
      }
    } catch (err) {
      console.error("Failed to fetch dummy project:", err);
    }
  }

  // 3. Fill the form if project found
  if (project) {
    document.getElementById("formSubject").value = project.subject;
    document.getElementById("formStartDate").value = project.startDate;
    document.getElementById("formEndDate").value = project.endDate;
    document.getElementById("formLanguage").value = project.language;
    document.getElementById("formDescription").value = project.description;
    document.getElementById("previewImage").src = project.imageUrl || "";
  }
});
</script>


